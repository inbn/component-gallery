---
interface Props {
  class?: string;
  width?: number;
  height?: number;
}

const {
  class: className = "w-full h-auto aspect-4/3",
  width = 512,
  height = 384,
  ...rest
} = Astro.props as Props;
---

<svg
  width={width}
  height={height}
  viewBox={`0 0 ${width} ${height}`}
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  {...rest}
>
  <rect
    x="1"
    y="1"
    width={width - 2}
    height={height - 2}
    fill="none"
    stroke="#B8B8B8"
    stroke-width="1"
    vector-effect="non-scaling-stroke"></rect>
  <line
    x1="1"
    y1="1"
    x2={width - 1}
    y2={height - 1}
    stroke="#B8B8B8"
    stroke-width="1"
    vector-effect="non-scaling-stroke"></line>
  <line
    x1={width - 1}
    y1="1"
    x2="1"
    y2={height - 1}
    stroke="#B8B8B8"
    stroke-width="1"
    vector-effect="non-scaling-stroke"></line>
</svg>
